{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "baseUrl": "src",
    "jsx": "react",
    "target": "ES2020",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
