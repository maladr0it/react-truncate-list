  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "package.json",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/react": "^19.2.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=16.8.x"
  }
