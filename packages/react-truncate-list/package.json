{
  "name": "react-truncate-list",
  "version": "1.0.3",
  "description": "Truncate a list of elements with a symbol or component of your choice",
  "repository": "https://github.com/maladr0it/react-truncate-list",
  "author": "bradford.lachlan@gmail.com",
  "keywords": [
    "truncate",
    "truncate list",
    "ellipsis",
    "react"
  ],
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf dist",
