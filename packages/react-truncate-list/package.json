    "dev": "node ./scripts/watch.mjs src 'npm run build:dev'"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "package.json",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/react": "^19.2.14",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
