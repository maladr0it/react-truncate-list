{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM", "ES2022"],
    "jsx": "react",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
